<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tedu.blog.mapper.EssayInterceptMapper">
    <resultMap id="BaseResultMap" type="com.tedu.blog.pojo.Essay">
        <id column="essay_id" jdbcType="INTEGER" property="essayId"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="image" jdbcType="VARCHAR" property="image"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="power" jdbcType="INTEGER" property="power"/>
        <result column="category_id" jdbcType="INTEGER" property="categoryId"/>
        <result column="c_count" jdbcType="INTEGER" property="cCount"/>
        <result column="comment_count" jdbcType="INTEGER" property="commentCount"/>
        <result column="weight" jdbcType="DOUBLE" property="weight"/>
        <result column="created_time" jdbcType="TIMESTAMP" property="createdTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <select id="essayIntercept" resultMap="BaseResultMap">
        select substring(content,1,20) as content , essay_id , title , image from essay
    </select>

</mapper>